<style>
    
    #items {
        margin-bottom: 10px;
        max-height: 500px;
        overflow: hidden;
        overflow-y: auto;
    }

    #items .close {
        margin-right: 20px;
    }

    
</style>

<form id="admin_years_form">
    <div id="items">
        <% if (fiscalYear.length > 0) { %>
            <% for (var i = 0; i < fiscalYear.length; i++) { %>
                <div class="row">
                    <button type="button" class="close" data-dismiss="item" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <div class="col-md-12">
                        <p>
                            <label title="">Ejercicio fiscal</label>
                            <input type="number" class="form-control" name="items" min="2015" max="9999" value ="<%= fiscalYear[i].year %>" required>
                        </p>
                    </div>
                </div>
            <% } %>
        <% } else { %>
        <div class="row">
            <button type="button" class="close" data-dismiss="item" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <div class="col-md-12">
                <p>
                    <label title="">Ejercicio fiscal</label>
                    <input type="number" class="form-control" name="items" min="2015" max="9999" required>
                </p>
            </div>
        </div>
        <% } %>
    </div>
    <div class="text-right">
        <button type="button" class="btn btn-default" data-action="add_item"><span class="fa fa-plus"></span></button>
    </div>
    <button class="btn btn-primary">Guardar</button>
</form>

<div class="hide" id="itemTemplate">
    <div class="row">
        <button type="button" class="close" data-dismiss="item" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <div class="col-md-12">
            <p>
                <label title="">Ejercicio fiscal</label>
                <input type="number" class="form-control" name="items"  min="2015" max="9999" required>
            </p>
        </div>
    </div>
</div>